@using Agility.Web.Objects
@using Agility.Components.Blog.Classes
@model Agility.Components.Blog.ViewModels.PostImageViewModel

@{
    string imageUrl = BlogUtils.GetPostImageUrl(Model.Configuration, Model.Post, Model.Type, Model.Width, Model.Height);
}

@if (!string.IsNullOrEmpty(imageUrl))
{
    <img class="agility-blg-post-image agility-img-responsive" src="@imageUrl" alt="@BlogUtils.GetPostImageAlt(Model.Configuration, Model.Post, Model.Type)" />
}